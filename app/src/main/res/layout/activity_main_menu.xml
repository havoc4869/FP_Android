<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.futsalkuy.MainMenu">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:background="#4B8D7F"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.AppBarOverlay">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgBack"
                        android:layout_width="50px"
                        android:layout_centerVertical="true"
                        android:layout_height="50px"
                        android:background="@android:drawable/ic_menu_revert"/>
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="24px"
                        android:layout_toRightOf="@+id/imgBack"
                        android:text="Home"
                        android:textSize="24dp"
                        android:textColor="@android:color/white"/>
                    <ImageView
                        android:layout_width="50px"
                        android:layout_centerVertical="true"
                        android:layout_height="50px"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/hamburger"
                        android:layout_marginRight="20dp"/>
                </RelativeLayout>


            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginRight="-2dp"
            android:background="@drawable/homeimg1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#D0E6E1" >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgBooking"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/logobooking"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking"
                    android:layout_marginLeft="2dp"
                    android:textSize="20px"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_toRightOf="@+id/imgBooking"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/imgLocation"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="122dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/logolocation"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="20px"
                    android:layout_centerVertical="true"

                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_toRightOf="@+id/imgLocation"/>
            </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgContact"
                        android:layout_width="20dp"
                        android:layout_marginRight="2dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/txtContact"
                        android:background="@drawable/logocontact"/>
                    <TextView
                        android:id="@+id/txtContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact"
                        android:layout_marginRight="20dp"
                        android:textSize="20px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#48887B"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@drawable/place"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@drawable/event"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#48887B"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@drawable/promotion"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@drawable/about"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
