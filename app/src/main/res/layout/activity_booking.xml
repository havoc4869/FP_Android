<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.futsalkuy.Booking">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="#4B8D7F"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/Theme.AppCompat.Light.NoActionBar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/toBack"
                    android:layout_width="80px"
                    android:layout_centerVertical="true"
                    android:layout_height="80px"
                    android:background="@android:drawable/ic_menu_revert"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="24px"
                    android:layout_toRightOf="@+id/toBack"
                    android:text="Booking"
                    android:textSize="24dp"
                    android:textColor="@android:color/white"/>
                <ImageView
                    android:layout_width="80px"
                    android:layout_centerVertical="true"
                    android:layout_height="80px"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/hamburger"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp">
                    <TextView
                        android:text="Telaga Futsal 1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="Jl. Perumnas Caturtunggal, Kec. Depok, Kab. Sleman, Daerah Istimewa Yogyakarta 55281"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="30dp"
                        android:text="Data Booking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/text4"
                        android:text="Please insert your data booking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:paddingTop="20dp"
                            android:text="ID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="241088909"
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:background="#4B8D7F"
                            android:layout_width="match_parent"
                            android:layout_height="2dp" />

                        <TextView
                            android:paddingTop="15dp"
                            android:text="Full name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="Anang Brilyansyah"
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:background="#4B8D7F"
                            android:layout_width="match_parent"
                            android:layout_height="2dp" />

                        <TextView
                            android:text="Date"
                            android:paddingTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/date"
                            android:editable="false"
                            android:focusable="false"
                            android:paddingTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:paddingTop="15dp"
                            android:text="Time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/time"
                            android:editable="false"
                            android:focusable="false"
                            android:paddingTop="5dp"
                            android:text="16.00"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/play"
                                android:paddingTop="15dp"
                                android:text="Playing"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <Spinner
                                android:id="@+id/spinner"
                                android:entries="@array/planets_array"
                                android:layout_width="match_parent"
                                android:backgroundTint="#d11f08"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp">
                            </Spinner>
                            <TextView
                                android:background="#4B8D7F"
                                android:layout_width="match_parent"
                                android:layout_height="2dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="15dp">
                            <TextView
                                android:text="Field"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <Spinner
                                android:id="@+id/spinner2"
                                android:paddingTop="10dp"
                                android:entries="@array/planets_array2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </Spinner>
                            <TextView
                                android:background="#4B8D7F"
                                android:layout_width="match_parent"
                                android:layout_height="2dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:text="Next"
                    android:background="#4B8D7F"
                    android:textColor="#ffffff"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
